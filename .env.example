# ===========================================
# NW London Heritage & Planning Engine
# Environment Configuration
# ===========================================
# Copy this file to .env.local and fill in the values

# ===========================================
# SUPABASE CONFIGURATION
# ===========================================
# Your Supabase project URL (e.g., https://xxxxx.supabase.co)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url

# Supabase anonymous key (safe for browser)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Supabase service role key (server-side only - NEVER expose to browser)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ===========================================
# MAPBOX CONFIGURATION
# ===========================================
# Mapbox public access token for maps and geocoding
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=your_mapbox_access_token

# Mapbox secret token for server-side operations (optional)
MAPBOX_SECRET_TOKEN=your_mapbox_secret_token

# ===========================================
# APPLICATION SETTINGS
# ===========================================
# Application base URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Environment (development, staging, production)
NODE_ENV=development

# ===========================================
# RATE LIMITING
# ===========================================
# Maximum requests per minute per IP
RATE_LIMIT_MAX_REQUESTS=60

# Rate limit window in seconds
RATE_LIMIT_WINDOW_SECONDS=60

# ===========================================
# CACHING
# ===========================================
# Cache TTL for geocoding results (seconds)
GEOCODING_CACHE_TTL=86400

# Cache TTL for property checks (seconds)
PROPERTY_CHECK_CACHE_TTL=3600

# ===========================================
# EMAIL CONFIGURATION (for lead capture)
# ===========================================
# SMTP host
SMTP_HOST=smtp.example.com

# SMTP port
SMTP_PORT=587

# SMTP user
SMTP_USER=your_smtp_user

# SMTP password
SMTP_PASSWORD=your_smtp_password

# Email from address
EMAIL_FROM=hello@hampsteadrenovations.co.uk

# ===========================================
# ANALYTICS (optional)
# ===========================================
# Google Analytics ID
NEXT_PUBLIC_GA_ID=

# Mixpanel token
NEXT_PUBLIC_MIXPANEL_TOKEN=

# ===========================================
# MONITORING (optional)
# ===========================================
# Sentry DSN
NEXT_PUBLIC_SENTRY_DSN=

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# ===========================================
# HISTORIC ENGLAND API (for data updates)
# ===========================================
HISTORIC_ENGLAND_API_KEY=
